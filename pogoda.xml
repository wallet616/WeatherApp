  <property name="project.jdk.home" value="${jdk.home.9.0}"/>
  <property name="project.jdk.bin" value="${jdk.bin.9.0}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.9.0"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.java-json.classpath">
    <pathelement location="${basedir}/../java-json.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Pogoda -->
  
  <dirname property="module.pogoda.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.pogoda" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.pogoda" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.pogoda" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.pogoda" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="pogoda.output.dir" value="${module.pogoda.basedir}/out/production/Pogoda"/>
  <property name="pogoda.testoutput.dir" value="${module.pogoda.basedir}/out/test/Pogoda"/>
  
  <path id="pogoda.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="pogoda.module.production.classpath">
    <path refid="${module.jdk.classpath.pogoda}"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  <path id="pogoda.runtime.production.module.classpath">
    <pathelement location="${pogoda.output.dir}"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  <path id="pogoda.module.classpath">
    <path refid="${module.jdk.classpath.pogoda}"/>
    <pathelement location="${pogoda.output.dir}"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  <path id="pogoda.runtime.module.classpath">
    <pathelement location="${pogoda.testoutput.dir}"/>
    <pathelement location="${pogoda.output.dir}"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.pogoda">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.pogoda">
    <patternset refid="excluded.from.module.pogoda"/>
  </patternset>
  
  <path id="pogoda.module.sourcepath">
    <dirset dir="${module.pogoda.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.pogoda" depends="compile.module.pogoda.production,compile.module.pogoda.tests" description="Compile module Pogoda"/>
  
  <target name="compile.module.pogoda.production" depends="register.custom.compilers" description="Compile module Pogoda; production classes">
    <mkdir dir="${pogoda.output.dir}"/>
    <javac2 destdir="${pogoda.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pogoda}/javac">
      <compilerarg line="${compiler.args.pogoda}"/>
      <bootclasspath refid="pogoda.module.bootclasspath"/>
      <classpath refid="pogoda.module.production.classpath"/>
      <src refid="pogoda.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.pogoda"/>
    </javac2>
    
    <copy todir="${pogoda.output.dir}">
      <fileset dir="${module.pogoda.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.pogoda.tests" depends="register.custom.compilers,compile.module.pogoda.production" description="compile module Pogoda; test classes" unless="skip.tests"/>
  
  <target name="clean.module.pogoda" description="cleanup module">
    <delete dir="${pogoda.output.dir}"/>
    <delete dir="${pogoda.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.pogoda" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.pogoda" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.pogoda" value="${basedir}/out/artifacts/Pogoda"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Pogoda.jar" value="${artifacts.temp.dir}/Pogoda.jar"/>
  </target>
  
  <target name="artifact.pogoda" depends="init.artifacts, compile.module.pogoda" description="Build &#39;Pogoda&#39; artifact">
    <property name="artifact.temp.output.pogoda" value="${artifacts.temp.dir}/Pogoda"/>
    <mkdir dir="${artifact.temp.output.pogoda}"/>
    <jar destfile="${temp.jar.path.Pogoda.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${pogoda.output.dir}"/>
      <zipfileset file="${basedir}/../java-json.jar"/>
      <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.Pogoda.jar}" tofile="${artifact.temp.output.pogoda}/Pogoda.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.pogoda" description="Build all artifacts">
    <mkdir dir="${artifact.output.pogoda}"/>
    <copy todir="${artifact.output.pogoda}">
      <fileset dir="${artifact.temp.output.pogoda}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>